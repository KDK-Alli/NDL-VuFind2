<?php //Don't add START and END comments ?>
<?php if (!empty($data)): ?>
  <ul class="truncate-field">
    <?php foreach ($data as $index => $item): ?>
      <?php
        $additional = [];
        if (!empty($item['type'])) {
          $additional['type'] = $this->escapeHtml($item['type']);
        }
        if (!empty($item['amount'])) {
          $additional['amount'] = $this->escapeHtml($item['amount']);
        }
        $additional = $this->record($this->driver)->getAuthorityLinkAdditionalData($additional);
      ?>
      <li><?=$this->record($this->driver)->getAuthorityLinkElement('author', $item['name'], $item, ['additionalData' => $additional, 'showInlineInfo' => true])?></li>
    <?php endforeach; ?>
  </ul>
<?php endif; ?>
