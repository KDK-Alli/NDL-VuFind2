<?php if (!isset($this->indexStart)) $this->indexStart = 0; ?>
<?php
  $showCheckboxes = !isset($this->hideCartControls) && $this->cart()->isActive();
  $disableExpand = null;
?>
<?php $i = $this->indexStart; foreach ($this->results->getResults() as $current):
  $recordNumber = $this->results->getStartRecord() + $i - $this->indexStart;
  if (null === $disableExpand) {
    $disableExpand = $this->record($current)->disableCondensedViewExpand();
  }
?>
  <div id="result<?=$i++ ?>" class="result condensed-list-view clearfix<?=$current->supportsAjaxStatus()?' ajaxItem':''?><?=$disableExpand ? ' disable-expand' : ''?>">
    <?php if (isset($this->showCheckboxes) && $this->showCheckboxes): ?>
      <div class="record-checkbox">
        <?=$this->record($current)->getCheckbox('', 'search-cart-form')?>
      </div>
    <?php endif; ?>
    <span class="sr-only"><?=$this->transEsc('Search Result');?> <?=$recordNumber ?></span>
    <?=$this->record($current)->getSearchResult('condensed')?>
  </div>
<?php endforeach; ?>
