<?php
  if (!in_array($this->layout()->templateDir, ['content', 'list', 'search']) || $this->layout()->templateName === 'results' || !is_callable([$this->results, 'getListObject'])) {
    return;
  }
  $notes = $this->driver->getListNotes($this->results->getListObject()->id);
