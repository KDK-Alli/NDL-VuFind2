
// Pakotetaan latamaan uusin taustakuva

@background-image-url: url('../images/logo_background.jpg?_=3');

// Ylävalikon tyylimuutokset

.finna-navbar .navbar-nav>li>a {
    font-size: 1em;
    font-weight: 500;
    padding: 0 7px;
    text-transform: uppercase;
}

.finna-navbar .fa-facebook-button, .finna-navbar .fa-instagram, .finna-navbar .fa-twitter, .finna-navbar .fa-youtube-play {
    background: tint(@link-color,88%);
    width: 2em;
    height: 2em;
    border-radius: 50%;
    text-align: center;
    color: @link-color;
    &:before {
        line-height: 2em;
    }
} 

// Etusivun hakuosion tyylimuutokset

.template-dir-search.template-name-home .searchContent {
    background-position: center center;
    background-size: cover;
}

.template-dir-search.template-name-home .search-form-container {
    padding-top: 5em;
    padding-bottom: 5em;
    @media (min-width: @screen-md) {
        padding-top: 10em;
        padding-bottom: 10m;
    }
    @media (min-width: @screen-lg) {
        padding-top: 12.5em;
        padding-bottom: 12.5em;
    }
}

.introduction-text {
    background-color: @brand-primary;
    position: relative;
    display: inline-block;
    max-width: 45rem;
    padding: 1em;
    margin-bottom: 1em;
    border-radius: @border-radius-small @border-radius-small @border-radius-small 0;
    @media (min-width: @screen-lg) {
        transform: scale(1.15);
        transform-origin: 0 bottom; 
    }
    h3 {
        margin:0;
        padding: 0;
        text-shadow: none;
        font-weight: 400;
        font-size: 1.25em;
        @media (min-width: @screen-sm) {
            font-size: 1.5em;
            transition: font-size 0.2s;
        }
    }
    :before {
        content: "";
        position: absolute;
        bottom: -12px;
        margin: auto;
        left:0;
        border-width: 0 0 12px 12px;
        border-style: solid;
        border-color: transparent @brand-primary;
    }
}

h1.introductionText em {
    color: tint(@brand-primary, 50%) !important;
}

// Etusivun tyylimuutokset

.info-col {
    margin-top: 1em;
    margin-bottom: 1em;
    @media (min-width: @screen-md) {
        width: 50%;
    }
    & p {
        font-size: 1.2em;
    }
    & h3 {
        font-size: 1.85em;
        font-weight: 400;
    }
}

.finna-about {
    padding-bottom: 1em;
}

.about-container {
    display:table;
    margin-left: 2em;
    margin-right: 2em;
    & img { 
        margin-right: 1em;
        max-width: none;
        width: 64px;
        height: 64px;
    }
    & span {
        vertical-align: middle;
        display: table-cell;
        font-size: 1.2em;
    }
}

.main.template-name-home h2, .carousel h2.carousel-header  {
  font-size: @font-size-base;
  font-weight: 600;
  background: none;
  color: @text-color;
  text-transform: uppercase;
  width: 100%;
  letter-spacing: 1px;
  padding: 0;
  &.content-header {
    border-bottom: 1px solid @gray-lighter; 
  }
}

// Etusivun ajankohtaista karusellin tyylimuutokset

.news-finna .carousel .carousel-slide-header p {
    height: 33%;
    padding-top: 1em;
    color: @link-color;
    background: rgba(255,255,255,0.9);
    text-shadow: none;
}

.news-finna .carousel .slick-slider:not(.slick-vertical) .slick-slide.slick-active:hover .carousel-slide-header p:not(.title-bottom) {
    opacity: inherit;
    text-decoration: underline;
}

.news-finna .slick-dots {
    display: none;
}

// Etusivun suosittelemme karusellin tyylimuutokset

.carousel .carousel-slide-header p { 
    font-size: 1em;
    font-weight: 600;
}
.carousel .carousel-text p {
  font-size: 0.9em;
}

.carousel .slick-slide.slick-active:hover .carousel-text {
    height: 100%;
}

.carousel .slick-initialized.slick-slider:not(.slick-vertical) {
    margin-bottom: 25px;
}

.tooltip-image .tooltip-image-info i {
    font-size: 24px;
    color: @link-color;
}


// Etusivun kampanjaboksin tyylimuutokset

.finna-campaign-item {
    background-image: url(../images/street-kuva.jpg);
    background-position: center bottom;
    background-size: cover;
    background-repeat:no-repeat;
    width: 100%;
    height: 325px;
    position: relative;
    border-right: 12px solid @body-bg;
    @media (min-width: @screen-sm) {
        margin-top: 56px;
    }
    & p {
        color: #fff;
        font-size: 1em;
        font-weight: 600;
        text-align: center;
        width: 100%;
        text-shadow: 1px 1px 2px #000000;
        font-size: 1.2em;
    }
    & .finna-campaign-title {
        padding-top: 1em;
        font-size: 3.5em;
        font-weight: 700;
        text-align: center;
        color: #fff;
        text-shadow: 2px 2px 4px #000000;
        @media (min-width: @screen-sm) and (max-width: @screen-sm-max) {
            padding-top: 0;
        }
    }
    & .finna-campaign-content {
        background: rgba(1,1,1,0.6);
        position: absolute;
        bottom: 0;
        left: 0;
        padding: 20px;
        height: 33%;
        width: 100%;
        text-align: center;
        margin-top: 1em;
        .btn-primary {
            padding-top: 0.5em;
            padding-bottom: 0.5em;
        }
    }
}

.template-name-streetsearch .search-form-container {
    background-image: url('../images/customstreetsearchbg?_=1');
    background-size: cover;
    background-position: center;
    padding-top: 5em;
    padding-bottom: 5em;
    @media (min-width: @screen-md) {
        padding-top: 10em;
        padding-bottom: 10em;
    }
    @media (min-width: @screen-lg) {
        padding-top: 12.5em;
        padding-bottom: 12.5em;
    }
}

.template-name-streetsearch .introduction .introduction-text {
    max-width: 60rem;
    h3.introductionText {
        font-size: 1.5em;
    }
    @media (min-width: @screen-lg) {
        transform: scale(1.15);
        transform-origin: 0 center; 
    }
}

// Sisäsivujen tyylimuutokset

.template-name-content h1.content-header {
  font-size: 1.5em !important;
  width: 100%;
  padding-top:1.5em;
  padding-bottom: 0.5em;
  &.content-header {
    border-bottom: 1px solid @gray-lighter;    
  }
}

.template-dir-librarycards .tooltip-image {
    display: none;
}

// Organisaatiosivun tyylimuutokset

.main.template-dir-content.template-name-content {
    ul.organisations {
        & li:nth-child(even) {
            background: @table-bg-accent;
          }
        & li {
            clear: both;
            overflow: auto;
            padding-left: 5px;
            padding-right: 5px;

            & .name {
                float: left;
                padding-top: 8px;
                padding-bottom: 8px;
            }
            & .link {
                float: right;
                & i {
                    font-size: 16px;
                    padding-top: 6px;
                    padding-bottom: 6px;
                }
            }
            & a .page-link {
                font-weight: bold;
            }
        }
    }
}

#usage-rights {
    background: @gray-ultralight;
    border-top: 10px @brand-primary solid;
}


// RSS-feedin sisältösivun tyylimuutokset

.main.template-dir-feedcontent.template-name-content ul {
  font-size: @content-font-size-base;
  line-height: @content-line-height-base;
  padding-left: 1.2em;
  padding-bottom: 0.9em;
  
  > li {
    list-style-type: disc;
  }
}

// Facetien ryhmitys hakutulossivulla

.list-group.facet.facet-group{
  &#side-panel-usage_rights_str_mv,
  &#side-panel-hierarchy_parent_title,
  &#side-panel-building{
    margin-bottom: 20px;
  }
}

// Zoomin popupin tyylitys

.imagepopup-zoom-container .zoom-button {
    border-bottom: none ;
}

// Palautelomake

.template-name-email .alert-info {
    margin-top: 1em;
}
